<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ilyes.android_projet.principale">
    <TextView

        android:text="@string/titre_recherche"
        android:textSize="25dp"
        android:textColor="#000"
        android:id="@+id/titre_recherche"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

     />

    <EditText
        android:id="@+id/editText_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="100"
        android:inputType="textPersonName"
        android:text="@string/edit_text_titre"
        android:layout_marginTop="45dp" />

    <EditText

        android:id="@+id/editText_annee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="100"
        android:inputType="textPersonName"
        android:text="@string/edit_text_annee"
        android:layout_marginTop="90dp"
        />

    <Button
        android:id="@+id/button_recherche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_annee"


        android:text="@string/button_recherche" />


</RelativeLayout>
